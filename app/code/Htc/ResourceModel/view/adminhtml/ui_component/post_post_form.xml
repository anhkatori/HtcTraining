<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
  <argument name="data" xsi:type="array">
     <item name="js_config" xsi:type="array">
        <item name="provider" xsi:type="string">posts_post_form.form_data_source</item>
     </item>
     <item name="label" translate="true" xsi:type="string">General Information</item>
     <item name="template" xsi:type="string">templates/form/collapsible</item>
  </argument>
  <settings>
     <buttons>
        <button class="Htc\ResourceModel\Block\Adminhtml\Post\Edit\BackButton" name="back"/>
        <button class="Htc\ResourceModel\Block\Adminhtml\Post\Edit\DeleteButton" name="delete"/>
        <button class="Htc\ResourceModel\Block\Adminhtml\Post\Edit\SaveButton" name="save"/>
        <button class="Htc\ResourceModel\Block\Adminhtml\Post\Edit\SaveAndContinueButton" name="save_and_continue"/>
     </buttons>
     <namespace>posts_post_form</namespace>
     <dataScope>data</dataScope>
     <deps>
        <dep>posts_post_form.form_data_source</dep>
     </deps>
  </settings>
  <dataSource name="form_data_source">
     <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
           <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
        </item>
     </argument>
     <settings>
        <submitUrl path="*/*/save"/>
     </settings>
     <dataProvider class="Htc\ResourceModel\Model\Posts\DataProvider" name="form_data_source">
        <settings>
           <requestFieldName>id</requestFieldName>
           <primaryFieldName>id</primaryFieldName>
        </settings>
     </dataProvider>
  </dataSource>
  <fieldset name="general">
     <settings>
        <label/>
     </settings>

     <field formElement="input" name="post" sortOrder="10">
        <argument name="data" xsi:type="array">
           <item name="config" xsi:type="array">
              <item name="source" xsi:type="string">Post</item>
           </item>
        </argument>
        <settings>
           <dataType>text</dataType>
           <label translate="true">Post name</label>
           <dataScope>post</dataScope>
           <validation>
              <rule name="required-entry" xsi:type="boolean">false</rule>
           </validation>
        </settings>
     </field>
  </fieldset>
</form>